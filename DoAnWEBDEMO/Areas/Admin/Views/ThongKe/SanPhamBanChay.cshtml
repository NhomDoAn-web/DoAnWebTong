@model List<DoAnWEBDEMO.ViewModels.ThongKeSanPhamViewModel>
@{
    ViewData["Title"] = "SanPhamBanChay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center my-4 font-weight-bold">THỐNG KÊ LƯỢT MUA</h2>

<div class="container-fuild">
    <div class="row">
        <div class="col-md-4">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Tên Sản Phẩm</th>
                        <th>Số Lượt Mua</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenSanPham</td>
                            <td>@item.LuotMua</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-8">
            <canvas id="chartSanPhamBanChay" style="width: 100%; height: 100%;"></canvas>
        </div>

        <form method="get" action="/Admin/ThongKe/SanPhamBanChay" class="mt-3">
            <div class="form-group">
                <label for="fromDate">Từ ngày:</label>
                <input type="date" id="fromDate" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
            </div>

            <div class="form-group">
                <label for="toDate">Đến ngày:</label>
                <input type="date" id="toDate" name="toDate" value="@ViewBag.ToDate" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary mt-2">Thống kê</button>
        </form>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
@section Scripts {
    <script>
        // Dữ liệu thống kê sản phẩm
        var thongKe = @Html.Raw(Json.Serialize(Model));
        console.log(thongKe);
        // Lấy danh sách tên sản phẩm và lượt mua
        var labels = thongKe.map(function (item) { return item.TenSanPham; });
        var data = thongKe.map(function (item) { return item.LuotMua; });
        console.log(labels);
        console.log(data);
        // Tạo biểu đồ
        var ctx = document.getElementById('chartSanPhamBanChay').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',  // Loại biểu đồ: bar (cột)
            data: {
                labels: labels,  // Các tên sản phẩm
                datasets: [{
                    label: 'Số Lượt Mua',
                    data: data,  // Dữ liệu lượt mua
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',  // Màu nền của các cột
                    borderColor: 'rgba(54, 162, 235, 1)',  // Màu viền của các cột
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true  // Đảm bảo trục y bắt đầu từ 0
                    }
                }
            }
        });
    </script>
}



