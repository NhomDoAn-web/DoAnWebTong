@model X.PagedList.IPagedList<DoAnWEBDEMO.Models.DanhMuc>
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "DanhSachDanhMuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    back {
        font-family: 'Roboto', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 40px;
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    .status-active {
        color: #28a745;
        font-weight: bold;
    }

    .status-inactive {
        color: #dc3545;
        font-weight: bold;
    }

    .page-link {
        color: #007bff;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-custom {
        transition: background-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .form-inline {
        display: flex;
        align-items: center;
        justify-content: flex-start; /* Căn chỉnh các phần tử về phía bên trái */
    }

        .form-inline input[type="text"] {
            width: 20%; /* Điều chỉnh chiều rộng của input */
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            margin-right: 5px; /* Giảm khoảng cách bên phải */
        }

        .form-inline button {
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            border-radius: 0.25rem;
            margin-right: 10px; /* Cải thiện khoảng cách giữa nút tìm kiếm và nút thêm */
        }

    .btn-search {
        margin-right: 10px;
    }

    .btn-add {
        margin-left: 10px;
    }
</style>

<div class="back">
    <div class="container">
        <h1>Danh sách các danh mục</h1>

        <!-- Form tìm kiếm và thêm danh mục -->
        <div class="mb-4">
            <form class="form-inline" method="get" action="/Admin/DanhMuc/DanhSachDanhMuc">
                <input type="text" name="TenDahMucTimKiem" placeholder="Tìm kiếm danh mục..." value="@ViewBag.TenTimKiemHienTai" />
                <button type="submit" class="btn btn-primary btn-custom btn-search">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
                <button type="button" class="btn btn-success btn-custom btn-add" id="openModalBtn">
                    <i class="bi bi-plus-circle"></i> Thêm danh mục
                </button>
            </form>   
        </div>

        <!-- Pop-up thêm danh mục modal -->
        <div id="addCategoryModal" class="fixed inset-0 hidden z-50 bg-opacity-75 flex items-center justify-center" style="background-color: rgba(0, 0, 0, 0.5);">
            <div class="bg-white rounded-lg w-96 p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Thêm danh mục mới</h3>
                <form method="post" action="/admin/danhmuc/ThemDanhMuc">
                    <div class="mb-4">
                        <label for="categoryName" class="block text-sm font-medium text-gray-700">Tên danh mục</label>
                        <input type="text" class="mt-1 p-2 border border-gray-300 rounded w-full" id="categoryName" name="TenDM" placeholder="Nhập tên danh mục" required>
                    </div>
                    <div class="mb-4">
                        <label for="categoryStatus" class="block text-sm font-medium text-gray-700">Trạng thái</label>
                        <select class="mt-1 p-2 border border-gray-300 rounded w-full" id="categoryStatus" name="TrangThai">
                            <option value="1">Hoạt động</option>
                            <option value="0">Không hoạt động</option>
                        </select>
                    </div>
                    <div class="flex justify-end">
                        <button type="button" class="bg-gray-500 text-white p-2 rounded mr-2 hover:bg-gray-700 transition duration-300" id="closeModalBtn">Đóng</button>
                        <button type="submit" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-700 transition duration-300">Thêm danh mục</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Bảng danh mục -->
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Mã danh mục</th>
                    <th scope="col">Tên danh mục</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Ma_DM</td>
                            <td>@item.TenDM</td>
                            <td>
                                <span class="@(item.Trang_Thai == 1 ? "status-active" : "status-inactive")">
                                    <i class="@(item.Trang_Thai == 1 ? "bi bi-check-circle-fill" : "bi bi-x-circle-fill")"></i>
                                    @(item.Trang_Thai == 1 ? "Hoạt động" : "Không hoạt động")
                                </span>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Sua", "DanhMuc", new { id = item.Ma_DM })" class="btn btn-primary btn-sm btn-custom">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a href="@Url.Action("ThayDoiTrangThai", "DanhMuc", new { id = item.Ma_DM })" class="btn btn-warning btn-sm btn-custom">
                                        <i class="bi bi-arrow-repeat"></i> Thay đổi trạng thái
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Không có danh mục nào để hiển thị.</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Phân trang -->
        <div class="d-flex justify-content-center mt-4">
            <ul class="pagination">
                @if (Model.PageCount > 1)
                {
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("DanhSachDanhMuc", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                                &laquo;
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("DanhSachDanhMuc", new { page = i })">@i</a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("DanhSachDanhMuc", new { page = Model.PageNumber + 1 })" aria-label="Next">
                                &raquo;
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>


<script>
    // Mở modal
    document.getElementById("openModalBtn").addEventListener("click", function () {
        document.getElementById("addCategoryModal").classList.remove("hidden");
    });

    // Đóng modal
    document.getElementById("closeModalBtn").addEventListener("click", function () {
        document.getElementById("addCategoryModal").classList.add("hidden");
    });

    // Nếu muốn đóng modal khi nhấn bên ngoài modal
    document.getElementById("addCategoryModal").addEventListener("click", function (e) {
        if (e.target === this) {
            this.classList.add("hidden");
        }
    });
</script>