@model X.PagedList.IPagedList<DoAnWEBDEMO.Models.SanPham>
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "TimKiemSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-4">
    <h2 class="text-center mb-4">Kết quả tìm kiếm</h2>

    <!-- Form tìm kiếm -->
    <div class="search-criteria mb-4">
        <div class="row">
            <!-- Tìm kiếm theo tên -->
            <div class="col-md-4 mb-3">
                <label for="searchTerm" class="form-label">Tên sản phẩm</label>
                <input type="text"
                       id="searchTerm"
                       class="form-control"
                       placeholder="Nhập tên sản phẩm...">
            </div>

            <!-- Lọc theo danh mục -->
            <div class="col-md-4 mb-3">
                <label for="category" class="form-label">Danh mục</label>
                <select id="category" class="form-select">
                    <option value="">Tất cả danh mục</option>
                    <option value="1">Điện thoại</option>
                    <option value="2">Máy tính bảng</option>
                    <option value="3">Phụ kiện</option>
                </select>
            </div>

            <!-- Lọc theo khoảng giá -->
            <div class="col-md-4 mb-3">
                <label class="form-label">Khoảng giá</label>
                <div class="input-group">
                    <input type="number"
                           id="priceMin"
                           class="form-control"
                           placeholder="Giá thấp nhất (VNĐ)">
                    <span class="input-group-text">-</span>
                    <input type="number"
                           id="priceMax"
                           class="form-control"
                           placeholder="Giá cao nhất (VNĐ)">
                </div>
            </div>
        </div>
        <div class="text-end">
            <button type="button" class="btn btn-primary">Tìm kiếm</button>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-center text-muted">Không tìm thấy sản phẩm nào.</p>
            </div>
        }
        else
        {
            foreach (var sp in Model)
            {
                <div class="col-md-2 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content($"~/image/products/{sp.HinhAnhSP}")"
                             class="card-img-top img-fluid"
                             alt="@sp.TEN_SP"
                             style="object-fit: contain; height: 200px; width: 200px;">
                        <div class="card-body">
                            <h6 class="card-title text-truncate">@sp.TEN_SP</h6>
                            <p class="card-text text-danger fw-bold">
                                @(string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C}", sp.Gia))
                            </p>
                            <!-- Nút Yêu thích -->
                            <button class="btn btn-outline-danger"
                                    onclick="addToWishlist(@sp.MaSP)">
                                <i class="fa fa-heart"></i> Yêu thích
                            </button>
                        </div>
                    </div>
                </div>

            }
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <ul class="pagination">
            <!-- Nút trang trước -->
            @if (Model.PageCount > 1)
            {
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("TimKiemSanPham", new { searchTerm = ViewBag.CurrentSearchTerm, page = Model.PageNumber - 1 })" aria-label="Previous">
                            &laquo;
                        </a>
                    </li>
                }

                <!-- Các trang -->
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("TimKiemSanPham", new { searchTerm = ViewBag.CurrentSearchTerm, page = i })">@i</a>
                    </li>
                }

                <!-- Nút trang sau -->
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("TimKiemSanPham", new { searchTerm = ViewBag.CurrentSearchTerm, page = Model.PageNumber + 1 })" aria-label="Next">
                            &raquo;
                        </a>
                    </li>
                }
            }
        </ul>
    </div>
</div>

<script>
    function addToWishlist(productId) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ThemSanPhamYeuThich", "TrangChu")', 
            data: { productId: productId },
            success: function (response) {
                if (response.success) {
                    alert(response.message); // Thông báo thành công
                } else {
                    alert(response.message); // Thông báo lỗi
                }
            },
            error: function (xhr, status, error) {
                alert("Đã có lỗi xảy ra. Vui lòng thử lại!");
            }
        });
    }
</script>

