@{
    Layout = "_Layout";
}

@{
    var userJson = Context.Session.GetString("user");
    string tenKhachHang = "";

    if (!string.IsNullOrEmpty(userJson))
    {
        var checkTaiKhoan = System.Text.Json.JsonSerializer.Deserialize<KhachHang>(userJson);
        tenKhachHang = checkTaiKhoan?.TenKH ?? "";
    }
}

@{
    ViewData["TenKhachHang"] = tenKhachHang;
} 