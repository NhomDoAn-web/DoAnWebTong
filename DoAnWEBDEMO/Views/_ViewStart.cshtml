@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@{
    Layout = "_Layout";
}

@{
    var userJson = Context.Session.GetString("user");
    var tongTien = Context.Session.GetInt32("tongTien");
    var soLuong = Context.Session.GetInt32("soLuong");

    string tenKhachHang = "";

    if (!string.IsNullOrEmpty(userJson))
    {

        var checkTaiKhoan = System.Text.Json.JsonSerializer.Deserialize<KhachHang>(userJson);
        tenKhachHang = checkTaiKhoan?.TenKH ?? "";
    }
}

@{
    ViewData["TenKhachHang"] = tenKhachHang;
    ViewData["tongTien"] = tongTien;
    ViewData["soLuong"] = soLuong;
} 