@model IEnumerable<dynamic>
@{
    Layout = "_LayoutProfile";
    ViewData["Title"] = "Đơn Hàng";
}
<h2 class="text-center my-4">
    <i class="bi bi-card-list"></i> @ViewData["Title"]
</h2>
<style>
    .btn-repurchase {
        background-color: #4CAF50; /* Màu xanh */
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-repurchase:hover {
            background-color: #45a049; /* Màu xanh đậm khi hover */
        }

        .btn-repurchase i {
            margin-right: 5px;
        }

</style>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Mã Đơn Hàng</th>
                <th>Mã Khách Hàng</th>
                <th>Mã Nhân Viên</th>
                <th>Ngày Đặt Hàng</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>Địa Chỉ Nhận Hàng</th>
                <th>Số Điện Thoại</th>
                <th>Tên Khách Hàng</th>
                <th>Tên Nhân Viên</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donHang in Model)
            {
                <tr>
                    <td>@donHang.MaDH</td>
                    <td>@donHang.MaKH</td>
                    <td>@donHang.MaNVXL</td>
                    <td>
                        @{
                            if (DateTime.TryParse(donHang.NgayDatHang?.ToString(), out DateTime date))
                            {
                                @date.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                @:N/A
                            }
                        }
                    </td>
                    <td>@String.Format("{0:C}", donHang.TongTienDonHang)</td>
                    <td>
                        @switch (donHang.TrangThai)
                        {
                            case 1:
                                <span class="badge bg-warning text-dark">Đang xử lý</span>
                                break;
                            case 2:
                                <span class="badge bg-success">Đã giao</span>
                                break;
                            case 3:
                                <span class="badge bg-danger">Đã hủy</span>
                                break;
                            case 4:
                                <span class="badge bg-info text-dark">Đang giao</span>
                                break;
                            case 5:
                                <span class="badge bg-secondary">Giao hàng thất bại</span>
                                break;
                            default:
                                <span class="badge bg-dark">Không xác định</span>
                                break;
                        }
                    </td>
                    <td>@donHang.DiaChiNhanHang</td>
                    <td>@donHang.SoDienThoai</td>
                    <td>@donHang.KhachHang?.TenKH</td>
                    <td>@donHang.NhanVien?.TENNV</td>
                    <td>
                        <div class="d-flex justify-content-start">
                            <a href="/DonHang/Details/@donHang.MaDH" class="btn btn-primary btn-sm ms-1">
                                <i class="bi bi-eye fs-6"></i> Chi tiết
                            </a>
                            <a href="/DonHang/Edit/@donHang.MaDH" class="btn btn-warning btn-sm ms-1">
                                <i class="bi bi-pencil fs-6"></i> Sửa
                            </a>

                            @if (donHang.TrangThai != 3) // Chỉ hiển thị nút hủy nếu trạng thái không phải "Đã hủy"
                            {
                                <a href="/DonHang/CancelOrder/@donHang.MaDH" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Hủy
                                </a>
                            }

                            @if (donHang.TrangThai == 3) // Hiển thị nút "Mua lại" nếu trạng thái là "Đã hủy"
                            {
                                <a href="/DonHang/RepurchaseOrder/@donHang.MaDH" class="btn btn-success btn-sm ms-1">
                                    <i class="bi bi-arrow-clockwise"></i> Mua lại
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
