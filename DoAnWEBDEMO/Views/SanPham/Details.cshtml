@model DoAnWEBDEMO.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container product-detail">
    <div class="row">
        <!-- Phần ảnh sản phẩm -->
        <div class="col-md-6">
            <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <!-- Hiển thị ảnh đầu tiên nếu có -->
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/image/" + Model.HinhAnhSP)" class="w-100" alt="Product Image">
                    </div>

                    <!-- Nếu có nhiều ảnh, sử dụng vòng lặp để hiển thị -->
@*                     @foreach (var image in Model.HinhAnhSP)
                    {
                        <div class="carousel-item">
                            <img src="@Url.Content("~/image/" + image)" class="d-block w-100" alt="Product Image">
                        </div>
                    } *@
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>

@*             <div class="thumbnail-gallery mt-3">
                @foreach (var image in Model.HinhAnhSP)
                {
                    <img src="@Url.Content("~/image/" + image)" class="img-thumbnail" alt="Thumbnail">
                }
            </div> *@

            <!-- Phần đánh giá -->
            <div class="reviews mt-5">
                <h3 class="text-center mb-4">ĐÁNH GIÁ SẢN PHẨM</h3>
                <div class="reviews-container" style="max-height: 450px; overflow-y: auto;">
                    @foreach (var review in Model.ChiTietBinhLuans)
                    {
                        <div class="review mb-3 p-3 border rounded shadow-sm">
                            <div class="review-header d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <!-- Sử dụng icon đại diện cho khách hàng -->
                                    <i class="fas fa-user-circle review-avatar me-3" style="font-size: 25px; color: #6c757d;"></i>
                                    <span class="reviewer-name font-weight-bold"><strong>@review.KhachHang.TenKH</strong></span>
                                </div>
                                <div class="d-flex flex-column align-items-end">
                                    <!-- Hiển thị ngày đánh giá -->
                                    <span class="review-date text-muted" style="font-size: 0.7rem;">(@review.NGAY.ToString("dd/MM/yyyy"))</span>
                                    <div class="review-rating text-warning mt-1">
                                        @Html.Raw(new string('★', review.SO_SAO))
                                        @Html.Raw(new string('☆', 5 - review.SO_SAO)) <!-- Hiển thị sao trống cho số sao chưa đánh giá -->
                                    </div>
                                </div>
                            </div>
                            <p>@review.NOI_DUNG</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Phần thông tin sản phẩm -->
        <div class="col-md-6">
            <h1>@Model.TEN_SP</h1>
            <p>@Model.MoTa</p>
            <p><strong>Giá: </strong> @Model.Gia.ToString("N0") VNĐ</p>
            <div class="rating">
                <span class="stars">'★' @Html.Raw(new string('★', Model.MaSP)) </span> @*ratting*@
                <span class="rating-score"> (@Model.MauSP) </span>
            </div>
            <div class="actions mt-4">
                <button class="btn btn-primary btn-lg px-4 py-2 rounded-3 shadow-sm hover-effect">
                    <i class="fas fa-cart-plus me-2"></i> Thêm vào giỏ hàng
                </button>
                <button class="btn btn-outline-danger btn-lg px-4 py-2 rounded-3 shadow-sm hover-effect">
                    <i class="fas fa-heart me-2"></i> Thêm yêu thích
                </button>
            </div>

            <!-- Bảng thông số kỹ thuật -->
            <div class="technical-details mt-5">
                <h3 class="text-center mb-4">Thông Số Kỹ Thuật</h3>
                <div class="technical-container" style="max-height: 450px; overflow-y: auto;">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th class="text-center">Thông Tin</th>
                                <th class="text-center">Chi Tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <td>@Model.TEN_SP</td>
                            </tr>
                            <tr>
                                <th>Kích thước màn hình</th>
                                <td>@Model.KichThuoc_ManHinh</td>
                            </tr>
                            <tr>
                                <th>Camera sau</th>
                                <td>@Model.CameraSau</td>
                            </tr>
                            <tr>
                                <th>Camera trước</th>
                                <td>@Model.Camera_Truoc</td>
                            </tr>
                            <tr>
                                <th>Chipset</th>
                                <td>@Model.Chipset</td>
                            </tr>
                            <tr>
                                <th>GPU</th>
                                <td>@Model.Gpu</td>
                            </tr>
                            <tr>
                                <th>RAM</th>
                                <td>@Model.Dung_Luong_Ram</td>
                            </tr>
                            <tr>
                                <th>Bộ nhớ trong</th>
                                <td>@Model.Bo_Nho_Trong</td>
                            </tr>
                            <tr>
                                <th>Dung lượng pin</th>
                                <td>@Model.Pin</td>
                            </tr>
                            <tr>
                                <th>Hệ điều hành</th>
                                <td>@Model.HeDieuHanh</td>
                            </tr>
                            <tr>
                                <th>Tần số quét</th>
                                <td>@Model.TanSoQuet</td>
                            </tr>
                            <tr>
                                <th>Bảo hành</th>
                                <td>@Model.TGianBaoHanh tháng</td>
                            </tr>
                            <tr>
                                <th>Màu sắc</th>
                                <td>@Model.MauSP</td>
                            </tr>
                        </tbody>
                    </table>
                </div>                
            </div>

        </div>

        @* <!-- Các sản phẩm nổi bật -->
        <div class="featured-products mt-5">
            <h3>Sản Phẩm Nổi Bật</h3>
            <div class="row">
                @if (ViewBag.SanPhamNoiBat != null)
                {
                    foreach (var product in ViewBag.SanPhamNoiBat)
                    {
                        <div class="col-md-3">
                            <div class="card">
                                <img src="@Url.Content("~/image/" + product.HinhAnhSP)" class="card-img-top" alt="@product.TEN_SP">
                                <div class="card-body">
                                    <h5 class="card-title">@product.TEN_SP</h5>
                                    <p class="card-text"><strong>Giá: </strong>@product.Gia.ToString("N0") VNĐ</p>
                                    <a href="@Url.Action("Details", "SanPham", new { id = product.MaSP })" class="btn btn-primary">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Không có sản phẩm nổi bật để hiển thị.</p>
                }
            </div>
        </div> *@
    </div>

</div>
