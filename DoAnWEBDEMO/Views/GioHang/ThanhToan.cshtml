﻿@{
    ViewData["Title"] = "Thanh Toán - TechLand";
}
@section CSS {
    <link rel="stylesheet" href="~/css/giohang.css" asp-append-version="true" />

}
<div  class="d-flex justify-content-center " >
    
    <div>
        <h1>Thanh Toán</h1>
        <i style="    font-size: 5rem; margin-left: 4rem;" class="bi bi-credit-card-2-back"></i>
    </div>
   
</div>
<div class="container">
   <div class="">
         <div >
                <table class="table">
                        <thead>
                            <tr>
                                <th>Tên Sản Phẩm</th>
                                <th>Thành Tiền</th>
                                <th>Số lượng</th>
                                <th>Tổng Tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.ThanhToan)
                            {
                                <tr class="item">
                                    <td class="info">
                                        <img style="width:210px;" src="/image/@item.HinhAnh" alt="Wireless Headset">
                                        <span>@item.TenSP</span>
                                        <span>@item.Mau</span>
                                    </td>
                                    <td class="price">@item.Gia.ToString("N0")</td>
                                    <td>
                                        <div style="margin-top: 5rem;" class="quantity-controls">
                                        <span  class="quantity ">@item.SoLuong</span
                                        </div>
                                    </td>
                                    <td class="price">@((item.Gia * item.SoLuong).ToString("N0"))</td>
                                </tr>
                            }
                        </tbody>
                </table>
         </div>

        

   
 </div>
    

    <div class=" d-flex justify-content-lg-between">
         <div class="m-3 " style="width:50%;">
            <h3>Chọn phương thức thanh toán</h3>
            <select id="paymentMethod" class="form-control" onchange="changePaymentImage()">
                <option value="1">Ví Momo</option>
                <option value="2">Ngân hàng</option>
            </select>

            <div id="paymentImage" class="mt-3">
                 <img src="/image/momo_image.jpg" alt="Ví Momo">
            </div>
        </div>
        <div class="col-md-6" style="background:#f9fafe;">
            <div class="">
                <table class="shop-table border-bottom">
                    <tbody>
                        <tr class="cart-subtotal">
                            <th class="fs-3">Tổng cộng </th>
                            <td style="padding-left: 15rem;">
                                <span class=" fs-3 ">@ViewBag.Total.ToString("N0") VNĐ</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-end">
                    <a href="#" class="btn btn-dark">Xác nhận hoàn thành thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function changePaymentImage() {
    var selectedValue = document.getElementById("paymentMethod").value;
    var imageContainer = document.getElementById("paymentImage");

    if (selectedValue == "1") {
        imageContainer.innerHTML = '<img src="/image/momo_image.jpg" alt="Ví Momo">';  // Thay đổi hình ảnh cho Momo
    } else if (selectedValue == "2") {
        imageContainer.innerHTML = '<img src="/image/bank_image.jpg" alt="Ngân hàng">';  // Thay đổi hình ảnh cho Ngân hàng
    }
}

    </script>

}