@model DoAnWEBDEMO.Models.BaiViet
@{
    ViewData["Title"] = "Danh Sách bài viết"  ;
}


<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Tiêu đề bài viết -->
            <h1 class="text-primary">@Model.TieuDe</h1>

            <!-- Ngày đăng bài -->
            <p class="text-muted">Đăng ngày: @Model.NgayDang.ToString("dd/MM/yyyy")</p>

            <!-- Hình ảnh bài viết -->
            <div class="text-center mb-4">
                <img src="/image/baiviet/@Model.HinhAnh" class="img-fluid rounded" style="max-height: 400px;">
            </div>

            <!-- Nội dung bài viết -->
            <div class="article-content">
                <p style="line-height: 1.8; text-align: justify;">@Html.Raw(Model.NoiDung)</p>
            </div>

            <!-- Nút quay lại -->
            <div class="mt-5">
                <a href="/BaiViet/DanhSachBaiViet" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách bài viết
                </a>
            </div>
        </div>
    </div>
</div>
