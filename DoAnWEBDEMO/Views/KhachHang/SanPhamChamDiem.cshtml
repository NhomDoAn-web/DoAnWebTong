@model IEnumerable<DoAnWEBDEMO.Models.ChiTietBinhLuan>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm Chấm Điểm";
}
@section CSS
{
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chamdiem.css" asp-append-version="true" />
   
}

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            @Html.Partial("~/Views/Shared/PartialsViews/_SlidebarProfile.cshtml")
        </div>

        <!-- Main content -->
        <div class="col-md-9">
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="~/image/@item.SanPham?.HinhAnhSP" alt="@item.SanPham?.TEN_SP" class="card-img-top" />
                                <div class="card-body">
                                    <h5 class="card-title">@item.SanPham?.TEN_SP</h5>
                                    <p class="card-text">
                                        <strong>Điểm:</strong> @item.SO_SAO <i class="fa fa-star text-warning"></i><br />
                                        <strong>Nội dung:</strong> @item.NOI_DUNG<br />
                                        <strong>Ngày:</strong> @item.NGAY.ToString("dd/MM/yyyy")
                                    </p>
                                    <div class="action-buttons">
                                        <!-- Xem chi tiết -->
                                        <a href="@Url.Action("Details", "SanPham", new { maSP = item.MA_SP })" class="btn btn-info btn-sm">
                                            <i class="fa fa-eye"></i> Xem Chi Tiết
                                        </a>

                                        <!-- Chỉnh sửa -->
                                        <a href="@Url.Action("SuaChamDiem", "KhachHang", new { khachHangId = item.MA_KH, sanPhamId = item.MA_SP })" class="btn btn-warning btn-sm">
                                            <i class="fa fa-edit"></i> Chỉnh Sửa
                                        </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p class="text-muted">Không có sản phẩm nào được đánh giá.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
